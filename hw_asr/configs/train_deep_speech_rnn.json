{
  "name": "train_deep_speech_rnn",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [{"type": "Gain", "args": {"p": 0.1, "sample_rate": 16000}},
             {"type": "PitchShift", "args": {"p": 0.1, "sample_rate": 16000, "n_steps": -3}},
             {"type": "Volume", "args": {"p":  0.1, "gain": 2.0, "gain_type": "amplitude"}},
             {"type": "Noise", "args": {"p": 0.1, "noise_name": "trumpet", "noise_level": 20}},
             {"type": "ColoredNoise", "args": {"p": 0.1, "sample_rate": 16000}}],
    "spectrogram": [{"type": "FreqMask", "args": {"p": 0.1, "freq_mask_param": 15}},
                    {"type": "TimeMask", "args": {"p": 0.1, "time_mask_param": 25}},
                    {"type": "TimeStretch", "args": {"p": 0.1, "fix_rate": 1.2}}]
  },
  "arch": {
    "type": "DeepSpeechRNN",
    "args": {
      "n_feats": 128,
      "fc_hidden": 512
    }
  },
  "data": {
    "train": {
      "batch_size": 64,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-360",
            "max_audio_length": 50.0,
            "max_text_length": 500,
            "limit":-1
          }

        }

      ]
    },
    "val": {
      "batch_size": 64,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 50.0,
            "max_text_length": 500,
            "limit":-1
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 3e-4,
      "weight_decay": 1e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 150,
      "epochs": 121,
      "anneal_strategy": "cos",
      "max_lr": 5e-4,
      "pct_start": 0.04
    }
  },
  "trainer": {
    "epochs": 120,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 150,
    "grad_norm_clip": 10
  }
}
